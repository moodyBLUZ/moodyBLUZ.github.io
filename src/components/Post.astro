---
const { post } = Astro.props;
const { data } = post;
const { Content } = await post.render();
---

<article class="post">
	<header>
		<h2>{data.title}</h2>

		<p class="meta">
			<time datetime={data.pubDate.toISOString()}>
				{data.pubDate.toLocaleDateString()}
			</time>
			Â· {data.author}
		</p>
	</header>

	{
		data.image && (
			<img
				src={data.image.url}
				alt={data.image.alt}
				class="hero"
			/>
		)
	}

	<section class="body">
		<Content />
	</section>
</article>

<style>
	.post {
		padding: 1rem 8rem;
		margin: 2rem 0;

		color: rgba(50, 50, 50, 0.85);

		/* border: 2px solid black; */
	}
	.hero {
		display: block;
		margin: 2rem auto;

		max-width: 100%;
		max-height: 50vh;

		width: auto;
		height: auto;

		object-fit: contain;
	}
</style>
