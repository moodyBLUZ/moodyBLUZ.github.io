---
import Post from "./Post.astro";
const { posts } = Astro.props;
---

<div class="feed">
	{posts.map((post: unknown) => <Post post={post} />)}
</div>

<style>
	.feed {
		margin-inline: auto;
		margin-top: 2rem;
		margin-bottom: 4rem;

		/* width control */
		width: min(100%, clamp(42rem, 70vw, 68rem));

		/* floating glass look */
		background: linear-gradient(
			to right,
			transparent 0%,
			rgba(245, 180, 225, 0.5) 25%,
			rgba(245, 180, 225, 0.8) 50%,
			rgba(245, 180, 225, 0.5) 75%,
			transparent 100%
		);

		backdrop-filter: blur(18px);
		-webkit-backdrop-filter: blur(18px);

		/* border */
		border: 5px solid rgba(245, 180, 225, 0.8);
		border-radius: 2.5rem;

		/* shadow logic matching title text-shadow */
		box-shadow:
			inset 0 1px 0 rgba(255, 255, 255, 0.45),
			0 6px 12px rgba(0, 0, 0, 0.18);

		/* internal breathing room */
		padding-inline: clamp(1.25rem, 4vw, 3rem);
		padding-block: 1rem 4rem;

		/* post layout */
		display: flex;
		flex-direction: column;
		gap: 1.5rem;

		position: relative;

		overflow: hidden;
	}
</style>
